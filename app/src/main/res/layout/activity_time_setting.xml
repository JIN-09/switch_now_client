<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/switchDarkgrey"
    android:orientation="vertical"
    tools:context="kr.co.switchnow.switch_now_client.TimeSettingActivity">


    <TextView
        android:id="@+id/time_setting_txt"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_width="120dp"
        android:textAlignment="textStart"
        android:paddingLeft="12dp"
        android:textColor="@color/switchLime"
        android:layout_alignLeft="@+id/time_setting_mode"
        android:text="시간설정"
        android:textSize="14dp"/>

    <TextView
        android:id="@+id/time_setting_mode"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:textSize="20dp"
        android:paddingLeft="12dp"
        android:gravity="center_vertical|left"
        android:background="@drawable/rounded"
        android:textColor="@color/switchDarkgrey"
        android:text="Default"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/time_setting_txt"
        android:layout_alignParentStart="true" />

    <Switch
        android:id="@+id/time_setting_trigger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:track="@drawable/custom_switch_selector"
        android:thumb="@drawable/custom_switch_thumb"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="2dp"
        android:layout_alignBaseline="@+id/time_setting_mode"
        android:layout_alignRight="@+id/time_setting_mode"
        />

    <TextView
        android:id="@+id/time_1_setting"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:textSize="20dp"
        android:paddingLeft="12dp"
        android:gravity="center_vertical|left"
        android:background="@drawable/rounded"
        android:textColor="@color/switchDarkgrey"
        android:text="Time 1"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/time_setting_mode"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/time_2_setting"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:textSize="20dp"
        android:paddingLeft="12dp"
        android:gravity="center_vertical|left"
        android:background="@drawable/rounded"
        android:textColor="@color/switchDarkgrey"
        android:text="Time 2"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/time_1_setting"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/time_3_setting"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:textSize="20dp"
        android:paddingLeft="12dp"
        android:gravity="center_vertical|left"
        android:background="@drawable/rounded"
        android:textColor="@color/switchDarkgrey"
        android:text="Time 3"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/time_2_setting"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/time_4_setting"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:textSize="20dp"
        android:paddingLeft="12dp"
        android:gravity="center_vertical|left"
        android:background="@drawable/rounded"
        android:textColor="@color/switchDarkgrey"
        android:text="Time 4"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/time_3_setting"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/time_1_min"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="min."
        android:textColor="@color/black_main"
        android:layout_marginRight="10dp"
        android:textSize="20dp"
        android:layout_alignRight="@+id/time_1_setting"
        android:layout_alignBaseline="@+id/time_1_setting"
        />

    <TextView
        android:id="@+id/time_2_min"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="min."
        android:textColor="@color/black_main"
        android:layout_marginRight="10dp"
        android:textSize="20dp"
        android:layout_alignRight="@+id/time_2_setting"
        android:layout_alignBaseline="@+id/time_2_setting"
        />


    <TextView
        android:id="@+id/time_3_min"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="min."
        android:textColor="@color/black_main"
        android:layout_marginRight="10dp"
        android:textSize="20dp"
        android:layout_alignRight="@+id/time_3_setting"
        android:layout_alignBaseline="@+id/time_3_setting"
        />


    <TextView
        android:id="@+id/time_4_min"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="min."
        android:textColor="@color/black_main"
        android:layout_marginRight="10dp"
        android:textSize="20dp"
        android:layout_alignRight="@+id/time_4_setting"
        android:layout_alignBaseline="@+id/time_4_setting"
        />

    <TextView
        android:id="@+id/time_1_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15"
        android:textSize="21dp"
        android:textColor="@color/black_main"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@+id/time_1_min"
        android:layout_alignBaseline="@+id/time_1_min"
        />

    <TextView
        android:id="@+id/time_2_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30"
        android:textSize="21dp"
        android:textColor="@color/black_main"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@+id/time_2_min"
        android:layout_alignBaseline="@+id/time_2_min"
        />

    <TextView
        android:id="@+id/time_3_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="45"
        android:textSize="21dp"
        android:textColor="@color/black_main"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@+id/time_3_min"
        android:layout_alignBaseline="@+id/time_3_min"
        />

    <TextView
        android:id="@+id/time_4_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60"
        android:textSize="21dp"
        android:textColor="@color/black_main"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@+id/time_4_min"
        android:layout_alignBaseline="@+id/time_4_min"
        />


    <ImageView
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:src="@drawable/circle_yellow"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView"
        android:layout_below="@+id/time_4_setting"
        />

    <TextView
        android:id="@+id/time_1_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time 1"
        android:textColor="@color/switchLime"
        android:textAlignment="center"
        android:layout_above="@+id/time_2_button"
        android:layout_toLeftOf="@+id/time_1_button"
        android:layout_alignBaseline="@+id/time_1_button"
        />

    <TextView
        android:id="@+id/time_2_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time 2"
        android:textColor="@color/switchLime"
        android:textAlignment="center"
        android:layout_above="@+id/time_2_button"
        android:layout_toRightOf="@+id/time_2_button"
        android:layout_alignBaseline="@+id/time_2_button"
        />



    <TextView
        android:id="@+id/time_3_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time 3"
        android:textColor="@color/switchLime"
        android:textAlignment="center"
        android:layout_below="@+id/time_3_button"
        android:layout_toRightOf="@+id/time_3_button"
        android:layout_alignBaseline="@+id/time_3_button"
        android:layout_alignLeft="@+id/time_2_text"
        />

    <TextView
        android:id="@+id/time_4_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time 4"
        android:textColor="@color/switchLime"
        android:textAlignment="center"
        android:layout_below="@+id/time_4_button"
        android:layout_toLeftOf="@+id/time_4_button"
        android:layout_alignBaseline="@+id/time_4_button"
        android:layout_alignRight="@+id/time_1_text" />


    <ToggleButton
        android:id="@+id/time_1_button"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/time_checked"
        android:textOn=""
        android:textOff=""
        android:text="@string/time_1"
        android:rotation="-90"
        android:clickable="false"
        android:scaleType="fitXY"
        android:layout_marginTop="38dp"
        android:layout_marginStart="12dp"
        android:layout_below="@+id/time_4_setting"
        android:layout_alignStart="@+id/imageView" />

    <ToggleButton
        android:id="@+id/time_2_button"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/time_checked"
        android:textOn=""
        android:textOff=""
        android:clickable="false"
        android:scaleType="fitXY"
        android:layout_marginEnd="12dp"
        android:layout_alignBottom="@+id/time_1_button"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignTop="@+id/time_1_button" />


    <ToggleButton
        android:id="@+id/time_3_button"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/time_checked"
        android:rotation="90"
        android:textOn=""
        android:textOff=""
        android:clickable="false"
        android:text="@string/time_2"
        android:scaleType="fitXY"
        android:layout_below="@+id/time_2_button"
        android:layout_alignRight="@+id/time_2_button"
        android:layout_marginTop="112dp"/>


    <ToggleButton
        android:id="@+id/time_4_button"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/time_checked"
        android:rotation="180"
        android:textOn=""
        android:clickable="false"
        android:textOff=""
        android:text="@string/time_2"
        android:scaleType="fitXY"
        android:layout_below="@+id/time_1_button"
        android:layout_alignLeft="@+id/time_1_button"
        android:layout_alignBottom="@+id/time_3_button"
        android:layout_marginTop="112dp"/>


    <ToggleButton
        android:id="@+id/logo_white_toggle"
        android:layout_width="65dp"
        android:layout_height="85dp"
        android:background="@drawable/logo_checked"
        android:clickable="false"
        android:textOn=""
        android:textOff=""
        android:layout_below="@+id/time_4_setting"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="95dp" />





</RelativeLayout>

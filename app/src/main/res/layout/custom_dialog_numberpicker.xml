<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/switchDarkgrey"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/dialog_pic_timepicker_img"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/warning_timepicker" />

    <View
        android:id="@+id/line_pic_timepicker"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/dialog_pic_timepicker_img"
        android:layout_marginTop="5dp"
        android:background="@color/switchGrey" />

    <TextView
        android:id="@+id/text_dialog_timepicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_pic_timepicker"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="TEXT"
        android:textColor="@color/switchGrey"
        android:textSize="18dp" />



    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/horizontal_number_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_dialog_timepicker"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="25dp"
        app:np_width="200dp"
        app:np_height="70dp"
        app:np_dividerColor="@color/colorAccent"
        app:np_max="120"
        app:np_min="15"
        app:np_orientation="horizontal"
        app:np_selectedTextColor="@color/colorAccent"
        app:np_textColor="@color/switchGrey"
        app:np_textSize="27dp"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/horizontal_number_picker"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <Button
        android:id="@+id/btn_dialog_timepicker_cancel"
        android:layout_width="130dp"
        android:layout_height="37dp"
        android:layout_weight="1"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded"
        android:gravity="center_vertical|center_horizontal"
        android:text="취소"
        android:textColor="@color/switchDarkgrey"
        android:textSize="17dp" />

    <Button
        android:id="@+id/btn_dialog_timepicker_setting"
        android:layout_width="130dp"
        android:layout_height="37dp"
        android:layout_weight="1"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/rounded_yellow"
        android:gravity="center_vertical|center_horizontal"
        android:text="설정"
        android:textColor="@color/switchDarkgrey"
        android:textSize="16dp" />




    </LinearLayout>





</RelativeLayout>
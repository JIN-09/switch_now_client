<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/switchDarkgrey"
    tools:context="kr.co.switchnow.switch_now_client.RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_img_register"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/default_profile"
            app:civ_border_color="@color/white_main"
            app:civ_border_width="2dp" />

        <ImageView
            android:id="@+id/mini_camera_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignRight="@+id/profile_img_register"
            android:layout_marginRight="3dp"
            android:layout_marginTop="113dp"
            android:src="@drawable/mini_camera" />

        <TextView
            android:id="@+id/register_id_disp"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/register_id_edit"
            android:layout_below="@+id/profile_img_register"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="8dp"
            android:paddingLeft="2dp"
            android:text="ID"
            android:textAlignment="textStart"
            android:textColor="@color/white_main"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/register_id_edit"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"
            android:layout_below="@+id/register_id_disp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:background="@drawable/rounded"
            android:maxLines="1"
            android:hint="이메일 형식의 아이디를 입력해주세요."
            android:paddingLeft="6dp"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/register_pswd_disp"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/register_pswd_edit"
            android:layout_below="@+id/register_id_edit"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="11dp"
            android:paddingLeft="2dp"
            android:text="Password"
            android:textAlignment="textStart"
            android:textColor="@color/white_main"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/register_pswd_edit"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:maxLines="1"
            android:layout_below="@+id/register_pswd_disp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:background="@drawable/rounded"
            android:hint="6자 이상의 비밀번호가 필요합니다."
            android:paddingLeft="6dp"
            android:textSize="18dp" />


        <TextView
            android:id="@+id/register_pswdConf_disp"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/register_pswdConf_edit"
            android:layout_below="@+id/register_pswd_edit"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="11dp"
            android:paddingLeft="2dp"
            android:text="Confirm Password"
            android:textAlignment="textStart"
            android:textColor="@color/white_main"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/register_pswdConf_edit"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:maxLines="1"
            android:layout_below="@+id/register_pswdConf_disp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:background="@drawable/rounded"
            android:paddingLeft="6dp"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/register_userName_disp"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/register_userName_edit"
            android:layout_below="@+id/register_mobile_edit"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="11dp"
            android:paddingLeft="2dp"
            android:text="User Name"
            android:textAlignment="textStart"
            android:textColor="@color/white_main"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/register_userName_edit"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:inputType="text"
            android:maxLines="1"
            android:layout_below="@+id/register_userName_disp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:background="@drawable/rounded"
            android:paddingLeft="6dp"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/register_mobile_disp"
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/register_mobile_edit"
            android:layout_below="@+id/register_pswdConf_edit"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="11dp"
            android:paddingLeft="2dp"
            android:text="Mobile"
            android:textAlignment="textStart"
            android:textColor="@color/white_main"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/register_mobile_edit"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:maxLines="1"
            android:inputType="phone"
            android:hint="'-'없이 입력해주세요."
            android:layout_below="@+id/register_mobile_disp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:background="@drawable/rounded"
            android:paddingLeft="6dp"
            android:textSize="18dp" />


        <TextView
            android:id="@+id/register_gender_disp"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/register_mobile_edit"
            android:layout_below="@+id/register_userName_edit"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="11dp"
            android:paddingLeft="2dp"
            android:text="Gender"
            android:textAlignment="textStart"
            android:textColor="@color/white_main"
            android:textSize="16dp" />

        <RadioGroup
            android:id="@+id/register_gender_radioButton_group"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:layout_below="@+id/register_gender_disp"
            android:layout_centerHorizontal="true"

            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/register_gender_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="27dp"
                android:buttonTint="@color/switchGrey"
                android:text="male"
                android:textColor="@color/switchGrey"
                android:textSize="20dp" />


            <RadioButton
                android:id="@+id/register_gender_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:buttonTint="@color/switchGrey"
                android:text="female"
                android:textColor="@color/switchGrey"
                android:textSize="20dp" />

        </RadioGroup>


        <Button
            android:id="@+id/register_btn"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_below="@+id/register_gender_radioButton_group"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="35dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/rounded"
            android:text="내용을 입력해주세요."
            android:textColor="@color/switchDarkgrey"
            android:textSize="18dp" />


        <TextView
            android:id="@+id/register_id_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/register_id_disp"
            android:layout_toRightOf="@+id/register_id_disp"
            android:text="✓"
            android:visibility="gone"
            android:textColor="@color/switchLime"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/register_pswd_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/register_pswd_disp"
            android:layout_toRightOf="@+id/register_pswd_disp"
            android:text="✓"
            android:visibility="gone"
            android:textColor="@color/switchLime"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/register_pswdConf_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/register_pswdConf_disp"
            android:layout_toRightOf="@+id/register_pswdConf_disp"
            android:text="✓"
            android:visibility="gone"
            android:textColor="@color/switchLime"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/register_mobile_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/register_mobile_disp"
            android:layout_toRightOf="@+id/register_mobile_disp"
            android:text="✓"
            android:visibility="gone"
            android:textColor="@color/switchLime"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/register_userName_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/register_userName_disp"
            android:layout_toRightOf="@+id/register_userName_disp"
            android:text="✓"
            android:visibility="gone"
            android:textColor="@color/switchLime"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/register_gender_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/register_gender_disp"
            android:layout_toRightOf="@+id/register_gender_disp"
            android:text="✓"
            android:visibility="gone"
            android:textColor="@color/switchLime"
            android:textSize="18dp" />


    </RelativeLayout>

</ScrollView>
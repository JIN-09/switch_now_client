<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_centerHorizontal="true"
    android:background="@color/switchGrey"
    tools:context="kr.co.switchnow.switch_now_client.Activity.PrivateChatActivity">

    <ListView
        android:id="@+id/chat_listview"
        android:layout_width="match_parent"
        android:layout_height="493dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="false"
        android:background="@drawable/rounded"
        android:divider="@android:color/transparent"
        android:dividerHeight="10.0sp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:transcriptMode="alwaysScroll"
        android:stackFromBottom="true"
        android:listSelector="@android:color/transparent"
        android:paddingBottom="10dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:paddingTop="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/switchDarkgrey"
        android:layout_centerVertical="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/message_txt_for_pChat"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:inputType="text"
            android:layout_width="300dp"
            android:layout_height="33dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:textColor="@color/black_main"
            android:layout_centerVertical="true"
            android:background="@drawable/rounded"
            android:layout_alignParentStart="true"
            />


        <ImageView
            android:id="@+id/send_btn_for_pChat"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="1dp"
            android:layout_toRightOf="@+id/message_txt_for_pChat"
            android:layout_alignParentEnd="true"
            android:src="@drawable/send_btn_for_chat"
            />


        <ImageView
            android:id="@+id/map_btn_for_mid_spot"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_toRightOf="@+id/message_txt_for_pChat"
            android:layout_centerVertical="true"
            android:layout_marginLeft="-35dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/map_icon_for_chat"
            />

    </RelativeLayout>


</RelativeLayout>

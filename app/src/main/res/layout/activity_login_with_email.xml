<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/switchDarkgrey"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="kr.co.switchnow.switch_now_client.LoginWithEmailActivity">


    <TextView
        android:id="@+id/welcomeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Welcome to Switch!!"
        android:textSize="24dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/switchGrey"
        />



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_img_login"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_below="@+id/welcomeMessage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/default_profile"
        app:civ_border_color="@color/white_main"
        app:civ_border_width="2dp" />


    <TextView
        android:id="@+id/profile_login_name_text"
        android:layout_marginTop="4dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_below="@+id/profile_img_login"
        android:textColor="@color/white_main"
        android:text="name"
        android:visibility="gone"
        android:textSize="25dp"/>


    <TextView
        android:id="@+id/login_id_disp"
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login_id_input"
        android:layout_below="@+id/profile_login_name_text"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="8dp"
        android:paddingLeft="2dp"
        android:text="ID"
        android:textAlignment="textStart"
        android:textColor="@color/white_main"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/login_id_input"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:maxLines="1"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/login_id_disp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:background="@drawable/rounded"
        android:hint="아이디는 이메일 형식입니다."
        android:paddingLeft="6dp"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/login_pswd_disp"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login_pswd_input"
        android:layout_below="@+id/login_id_input"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="11dp"
        android:paddingLeft="2dp"
        android:text="Password"
        android:textAlignment="textStart"
        android:textColor="@color/white_main"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/login_pswd_input"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:maxLines="1"
        android:layout_below="@+id/login_pswd_disp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:background="@drawable/rounded"
        android:paddingLeft="6dp"
        android:textSize="18dp" />


    <Button
        android:id="@+id/login_btn_with_email"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@+id/login_pswd_input"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:layout_marginTop="65dp"
        android:background="@drawable/rounded"
        android:text="아이디를 입력해주세요."
        android:textColor="@color/switchDarkgrey"
        android:textSize="18dp" />


    <TextView
        android:id="@+id/login_id_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/login_id_disp"
        android:layout_toRightOf="@+id/login_id_disp"
        android:text="✓"
        android:visibility="gone"
        android:textColor="@color/switchLime"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/login_pswd_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/login_pswd_disp"
        android:layout_toRightOf="@+id/login_pswd_disp"
        android:text="✓"
        android:visibility="gone"
        android:textColor="@color/switchLime"
        android:textSize="18dp" />


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_header_background"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_nav"
        android:layout_marginTop="17dp"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:src="@drawable/default_profile"
        android:layout_centerHorizontal="true"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/white_main"/>

    <ImageView
        android:id="@+id/mini_camera_image"
        android:layout_marginTop="103dp"
        android:layout_marginRight="3dp"
        android:layout_alignRight="@+id/profile_image_nav"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/mini_camera"
        />

    <TextView
        android:id="@+id/profile_name_text_nav"
        android:layout_marginTop="3.5dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_below="@+id/profile_image_nav"
        android:textColor="@color/switchGrey"
        android:shadowColor="@color/white_main"
        android:shadowDx="1.0"
        android:shadowDy="1.0"
        android:shadowRadius="1.0"
        android:text="name"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/profile_status_text_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_name_text_nav"
        android:layout_centerHorizontal="true"
        android:textSize="16dp"
        android:shadowColor="@color/white_main"
        android:shadowDx="1.0"
        android:shadowDy="1.0"
        android:shadowRadius="1.0"
        android:layout_marginTop="3dp"
        android:textColor="@color/white_main"
        android:text="status message"
        />


</RelativeLayout>

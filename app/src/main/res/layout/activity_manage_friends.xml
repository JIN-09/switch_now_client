<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/switchDarkgrey"
    android:gravity="center_horizontal"
    tools:context="kr.co.switchnow.switch_now_client.ManageFriendsActivity">


    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3.5dp"
        app:tabBackground="@color/switchDarkgrey"
        app:tabTextAppearance="@style/tabSizeFor"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabIndicatorColor="@color/switchDarkgrey"
        app:tabSelectedTextColor="@color/switchLime"
        app:tabTextColor="@color/switchGrey"/>



    <android.support.v4.view.ViewPager
        android:id="@+id/mViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/tab_layout"

        />


</RelativeLayout>

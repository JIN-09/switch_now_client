<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/msg_item_user"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="8dp"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/msg_contents_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/item_rounded"
        android:layout_alignParentRight="true"
        android:paddingBottom="8dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="5dp"
        android:text="userTEXT"
        android:textColor="@color/black_main"
        android:textSize="17dp"
        />

    <TextView
        android:id="@+id/user_msg_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/msg_contents_user"
        android:layout_alignBottom="@+id/msg_contents_user"
        android:layout_marginRight="8dp"
        android:text="time"
        android:textColor="@color/black_main"
        android:textSize="11dp"
        />

</RelativeLayout>